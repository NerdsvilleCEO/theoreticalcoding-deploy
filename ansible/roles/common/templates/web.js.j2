var keystone = require('keystone');

keystone.init({
  'name': '{{project_name}}',
  'favicon': 'public/favicon.ico',
  'less': 'public',
  'static': ['public'],

  'views': 'templates/views',
  'view engine': 'jade',

  'auto update': true,
  'mongo': '{{mongodb_url}}',

  'session': true,
  'auth': true,
  'user model': 'User',
  'cookie secret': '{{cookie_secret}}'
});

require('./models');

keystone.set('routes', require('./routes'));

keystone.start();
